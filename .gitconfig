[alias]
	ba = branch -a
	br = branch
	ca = commit --all
	ci = commit
	co = checkout
	dc = diff --color
	ds = diff --stat
	dw = diff --color --word-diff
	lg = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	ls = log --stat --decorate
	st = status

[branch]
	autosetupmerge = true

[color]
	branch = auto
	diff = auto
	interactive = auto
	pager = true
	status = auto
	ui = true

[color "diff"]
	commit = green
	frag = green
	meta = green
	new = cyan
	old = red
	plain = white
	whitespace = yellow yellow

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	editor = emacs -nw
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[push]
	default = matching

[user]
	name = Mak Kolybabi
	email = mak@kolybabi.com

[branch "master"]
	rebase = true
